<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        app:cardCornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.66"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardNoteName"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:lines="1"
                android:maxLines="1" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/updateTime"
                app:layout_constraintLeft_toLeftOf="@+id/cardNoteName"
                app:layout_constraintRight_toRightOf="@+id/cardNoteName"
                app:layout_constraintTop_toBottomOf="@+id/cardNoteName"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/noteText"
                app:layout_constraintLeft_toLeftOf="@+id/updateTime"
                app:layout_constraintRight_toRightOf="@+id/updateTime"
                app:layout_constraintTop_toBottomOf="@+id/updateTime"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:lines="2"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="5dp"
                android:ellipsize="end"
                android:ems="80" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>